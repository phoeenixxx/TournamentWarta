<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="header-content">
            <div class="logo"><a href="/">Warta Arena</a></div>
            <nav class="nav-links">
                <a href="/tournaments">Home</a>
                <a href="/auth/logout" onclick="return confirm('Are you sure you want to log out?')">Logout</a>
            </nav>
        </div>
    </header>
    <main class="container">
        <div class="card" style="max-width:1000px; margin:auto;">
            <h1>Hello, <%= user.firstName %></h1>
            
            <h3>Your Tournaments</h3>
            <% if(user.Participants.length > 0) { %>
                <ul>
                    <% user.Participants.forEach(p => { %>
                        <% if(p.Tournament) { %> 
                            <li style="background:white; border:1px solid #e2e8f0; margin-bottom:0.5rem; padding:1rem; border-radius:8px; display:flex; justify-content:space-between; align-items:center;">
                                <a href="/tournaments/<%= p.Tournament.id %>" style="text-decoration:none; font-weight:600; color:#0f172a;"><%= p.Tournament.name %></a> 
                                <span class="badge badge-open">Player</span>
                            </li> 
                        <% } %>
                    <% }) %>
                </ul>
            <% } else { %> <p style="color:var(--secondary)">No registrations.</p> <% } %>
            
            <h3 style="margin-top:2rem;">Organized by You</h3>
            <% if(user.OrganizedTournaments.length > 0) { %>
                <ul>
                    <% user.OrganizedTournaments.forEach(t => { %>
                        <li style="background:white; border:1px solid #e2e8f0; margin-bottom:0.5rem; padding:1rem; border-radius:8px; display:flex; justify-content:space-between; align-items:center;">
                            <a href="/tournaments/<%= t.id %>" style="text-decoration:none; font-weight:600; color:#0f172a;"><%= t.name %></a>
                            <a href="/tournaments/<%= t.id %>/edit" style="color:var(--primary); font-weight:600;">Edit</a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %> <p style="color:var(--secondary)">No organized tournaments.</p> <% } %>
        </div>
    </main>
    <footer>
        <div class="footer-content">
            <div class="footer-info"><h3>Contact Us</h3><p>Poznan, Warta Campus, Politechnika</p><p>Phone: +48 123 456 789</p><p>Email: contact@wartaarena.pl</p></div>
            <div class="footer-newsletter"><h3>Subscribe to Newsletter</h3><form class="newsletter-form"><input type="email" placeholder="Enter your email" required><button type="button">Subscribe</button></form></div>
        </div>
    </footer>
    <script>
        document.querySelector('.newsletter-form button').addEventListener('click', (e) => {
            e.preventDefault();
            const email = document.querySelector('.newsletter-form input').value;
            if(email.includes('@') && email.includes('.')) {
                alert('Thanks for subscribing! ðŸ“©');
                document.querySelector('.newsletter-form input').value = '';
            } else { alert('Please enter a valid email address.'); }
        });
    </script>
</body>
</html>